{
  "name": "erp-backend",
  "version": "1.0.0",
  "description": "ERP System Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "postinstall": "echo 'Backend dependencies installed successfully'",
    "test": "jest",
    "test:health": "curl http://localhost:5000/health || echo 'Health check failed'",
    "test:api": "node scripts/test-api.js",
    "verify:routes": "node scripts/verify-routes.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "seed:dimension-reports": "node scripts/seed-dimension-reports.js",
    "db:setup": "npm run migrate && npm run seed",
    "logs": "tail -f logs/app.log",
    "check:routes": "node -e \"console.log('Testing routes...'); require('./routes/auth'); console.log('âœ… Routes loaded successfully');\""
  }, 
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
