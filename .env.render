# Production Environment Configuration for Render
# Copy these exact values to your Render dashboard Environment Variables

# CRITICAL - Database (Set this to your PostgreSQL URL from Neon/Render)
DATABASE_URL=postgresql://username:password@hostname:port/database?sslmode=require

# CRITICAL - JWT Secret (Generate a secure random 32+ character string)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-random-string-here

# Application Environment
NODE_ENV=production

# Frontend URL (Update with your actual Render app URL)
FRONTEND_URL=https://your-app-name.onrender.com

# Platform Detection
RENDER=true

# Server Configuration
PORT=10000

# CORS Configuration
CORS_ORIGIN=https://your-app-name.onrender.com

# JWT Configuration
JWT_EXPIRES_IN=24h

# Database Pool Settings (Optimized for Render free tier)
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000

# Security
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
BCRYPT_ROUNDS=10

# File Upload
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
DEBUG_MODE=false

# Session
SESSION_SECRET=another-secure-session-secret-32-characters-minimum